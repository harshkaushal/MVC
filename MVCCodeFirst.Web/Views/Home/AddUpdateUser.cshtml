@using MVCCodeFirst.Common.ViewModels;
@model UserInfoModel

@{
    ViewBag.Title = "AddUpdateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Update User</h2>
@using (Html.BeginForm("AddUpdateUser", "Home", FormMethod.Post))
{
    @Html.HiddenFor(d=>d.ID)
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "cols-sm-2 control-label" })
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                @Html.ValidationMessageFor(d => d.FirstName)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "cols-sm-2 control-label" })
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
                @Html.ValidationMessageFor(d => d.LastName)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "cols-sm-2 control-label" })
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                @Html.ValidationMessageFor(d=>d.Email)
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age, new { @class = "cols-sm-2 control-label" })
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @placeholder = "Age", @type = "number" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsActive, new { @class = "cols-sm-2 control-label" })
        <div class="cols-sm-10">
            <div class="input-group">
                @Html.CheckBoxFor(d=>d.IsActive)
            </div>
        </div>
    </div>

    <div class="form-group ">
        <input type="submit" value="Save" class="btn btn-primary" />
        <input type="button" value="Cancel" class="btn btn-default" />
    </div>
}

