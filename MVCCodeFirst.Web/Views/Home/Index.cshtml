@using MVCCodeFirst.Common.ViewModels;
@model List<UserInfoModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h3>User Details</h3>

</div>

<div class="row">
    <table class="table-responsive table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Active</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model.ToList())
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Age</td>
                <td>@item.IsActive</td>
                <td>@Html.ActionLink("Edit", "AddUpdateUser", new { uid=item.ID})</td>
            </tr>
        }
    </table>
</div>
<div class="row">
    @Html.ActionLink("Add New User", "AddUpdateUser", new { uid = 0 })
</div>